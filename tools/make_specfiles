 ],
 [
  "netapi32",
  "srvcli",
 ],
 [
  "ole32",
  "iprop",
 ],
 [
  "secur32",
  "security",
  "sspicli",
 ],
 [
  "gdi32",
  "usp10"
 ],
 [
  "bthprops.cpl",
  "irprops.cpl",
 ],
 [
  "sfc_os",
  "sfc",
 ],
 [
  "bcrypt",
  "ncrypt",
  "cng.sys",
 ],
 [
